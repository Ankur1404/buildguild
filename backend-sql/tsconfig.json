{
  "compilerOptions": {
    // Project structure
    "rootDir": ".",
    "outDir": "./dist",

    // Environment
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "types": ["node"],

    // Output
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strict type-checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Style options (optional but recommended)
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Others
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [ "app.ts"],
  "exclude": ["node_modules"]
}
